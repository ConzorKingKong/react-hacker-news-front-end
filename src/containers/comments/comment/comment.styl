.comment
  margin-bottom 1em
  margin-top 1em
  overflow auto
  font-size 0.9em

  .comment
    margin-left 30px
    font-size 0.9em !important

  .comment .comment
    font-size 0.9em !important

  .comment .comment .comment
    font-size 0.9em !important

  .comment .comment .comment .comment
    font-size 0.9em !important

// Alternating background for top-level comments
.comment-list > div:nth-child(even) > .comment
  background-color rgb(230, 230, 223)

// For user comment pages  
.comment-page > div:nth-child(even) > .comment
  background-color rgb(230, 230, 223)

.comment-sub-header
  display flex
  color grey
  flex-direction row !important

.comment-sub-header-user
  margin-right 0.3em
  margin-left 0.3em
  color black

.show-hide
  margin-left 0.2em
  color grey

.show-hide:hover
  cursor pointer

.parent
  margin-left 0.3em
  color grey

pre
  white-space pre-wrap
